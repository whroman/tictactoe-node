extends layout

block content
    div.spacer-md
    #board-wrapper
        #board
        .spacer-xs
        #info.text-sm
            .player.one.left
                .tile.faux
                .name player one
            .player.two.right
                .tile.faux
                .name player two
            .player.new-game
                .button.tile.faux
                    div !
                .name new game
    #overlay-bg
    #message
        .title
        .new-game
            .button.tile.faux
                div !
            .text new game

    script#tile-template(type='text/template')
        <div id='tileX<%-x%>Y<%-y%>' class="tile <%- x == 0 ? 'nth-tile' : "" %>" ></div>
